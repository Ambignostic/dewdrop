#!/usr/bin/env php
<?php

if ('cli' !== php_sapi_name()) {
    exit;
}

if (file_exists(__DIR__ . '/../vendor/autoload.php')) {
    require_once __DIR__ . '/../vendor/autoload.php';
} else {
    require_once __DIR__ . '/../../../autoload.php';
}

use Dewdrop\Env;

Env::bootstrapCli();

$env = Env::getInstance();
$env->initializeCli();

$cli = new \Dewdrop\Cli\Run();
$cli->run();
